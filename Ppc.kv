#:kivy 1.0.9

<Health>:
    size:90,90
    canvas:
        Rectangle:
            source:'./assets/heart.png'
            pos:self.pos
            size:self.size

<AttackPower>:
    size: 130,130
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source : root.image_source

<ExplosionPower>:
    size:150,150
    canvas:
        Rectangle:
            pos:self.pos
            size: self.size
            source:root.image_source
<ExplosionPlayer>:
    size:150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.image_source
<ExplosionPlayerNotHurt>:
    size:150,150
    canvas:
        Rectangle:
            pos:self.pos
            size: self.size
            source:root.image_source
            
<Player>:
    size_hint:None, None
    size : 200,200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source
<Enemy>:
    size_hint:None, None
    size : 200,200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source

<HomePage>:
    canvas.before:
        Rectangle:
            source: './assets/backgroundhome.png'
            pos: self.pos
            size: self.size
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<WinScreen>:
    canvas.before:
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            source:'./assets/backgroundwinlose.png'
            pos: self.pos
            size: self.size

<LoseScreen>:
    canvas.before:
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            source:'./assets/backgroundwinlose.png'
            pos: self.pos
            size: self.size

<GameWidget>:
    player : player_left
    enemy : enemy_right 
    
    canvas:
        Rectangle:
            source: './assets/background2.png'
            pos: self.pos
            size: self.size

        Rectangle:
            source:'./assets/energy.png'
            pos: self.width / 4 + 90,self.top / 2 -60
            size: 100,100
        Rectangle:
            source:'./assets/energy.png'
            pos: root.width *3 /4 + 60,self.top / 2 - 60
            size: 100,100


         #เอาไว้ใส่เป็นรูปบอกท่ากับพลังงานที่ใช้
        Rectangle:
            source: './assets/prepare.png'
            pos: self.width / 2 - 900, self.top / 22
            size:150,150 
        Rectangle:
            source: './assets/1.png'
            pos: self.width / 2 - 750, self.top / 22
            size:150,150 
        Rectangle:
            source: './assets/2.png'
            pos: self.width / 2 - 600, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/3.png'
            pos: self.width / 2 -450, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/4.png'
            pos: self.width / 2 -300, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/5.png'
            pos: self.width / 2 -150, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/6.png'
            pos: self.width / 2 , self.top / 22
            size:150,150
        Rectangle:
            source: './assets/7.png'
            pos: self.width / 2 +150, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/8.png'
            pos: self.width / 2 +300, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/9.png'
            pos: self.width / 2 +450, self.top / 22
            size:150,150
        Rectangle:
            source: './assets/10.png'
            pos: self.width / 2 +600, self.top / 22
            size:150,150
            

    Label:
        color: 0, 0, 1, 1
        text: root.stage  
        font_size: 50
        center: self.parent.center 
         
    #กรณีที่มีการอ้างอิงถึงอ็อบเจ็กต์ด้านนอกคลาสปัจจุบัน เช่น <Player> หรือ <Enemy> จะใช้ root เพื่ออ้างอิงถึง GameWidget แทน self 
    Player:
        id: player_left
        pos: root.width / 4, root.top / 4

    Enemy:
        id: enemy_right
        pos: root.width * 3 / 4 - 100, root.top / 4
    
    Label:
        color: 0.6, 0.4, 0.8, 1  
        font_size: 70
        center_x: root.width / 4 + 30
        top: root.top / 2 + 40
        text: str(root.player.energy)
   
    Label:
        color: 0.6, 0.4, 0.8, 1  
        font_size: 70
        center_x: root.width *3 /4
        top: root.top /2 + 40
        text: str(root.enemy.energy)
   
