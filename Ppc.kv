#:kivy 1.0.9
<AttackPower>:
    size: 100,100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source : root.image_source
<Player>:
    size : 150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source
<Enemy>:
    size : 150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source

<GameWidget>:
    player : player_left
    enemy : enemy_right 
    

    canvas:
        Rectangle:
            source: './assets/background.jpg'
            pos: self.pos
            size: self.size
    #กรณีที่มีการอ้างอิงถึงอ็อบเจ็กต์ด้านนอกคลาสปัจจุบัน เช่น <Player> หรือ <Enemy> จะใช้ root เพื่ออ้างอิงถึง GameWidget แทน self 
    Player:
        id: player_left
        pos: root.width / 4 - 20, root.top - 600

    Enemy:
        id: enemy_right
        pos: root.width * 3 / 4 - 20, root.top - 600
    
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top-50
        text: str(root.player.energy)
    Label:
        font_size: 70
        center_x: root.width *3/4
        top: root.top -50
        text: str(root.enemy.energy)


    
