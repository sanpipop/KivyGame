#:kivy 1.0.9

<Health>:
    size:100,100
    canvas:
        Rectangle:
            source:'./assets/heart.png'
            pos:self.pos
            size:self.size

<AttackPower>:
    size: 100,100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source : root.image_source

<ExplosionPower>:
    size:100,100
    canvas:
        Rectangle:
            pos:self.pos
            size: self.size
            source:root.image_source
<ExplosionPlayer>:
    size:150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.image_source

            
<Player>:
    size_hint:None, None
    size : 150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source
<Enemy>:
    size_hint:None, None
    size : 150,150
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size 
            source: root.image_source

<HomePage>:
    canvas.before:
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<WinScreen>:
    canvas.before:
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<LoseScreen>:
    canvas.before:
        Color:
            rgba: 0.22, 0.8, 1, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<GameWidget>:
    player : player_left
    enemy : enemy_right 
    
    canvas:
        Rectangle:
            source: './assets/background.jpg'
            pos: self.pos
            size: self.size

        Rectangle:
            source:'./assets/energy.png'
            pos: self.width / 4 + 60,self.top / 2 -100
            size: 100,100
        Rectangle:
            source:'./assets/energy.png'
            pos: root.width *3 /4 + 60,self.top / 2 -100
            size: 100,100


         #เอาไว้ใส่เป็นรูปบอกท่ากับพลังงานที่ใช้
        Rectangle:
            source: './assets/Charge.png'
            pos: self.width / 2 - 550, self.top / 22
            size:100,100 
        Rectangle:
            source: './assets/SuperCharge.png'
            pos: self.width / 2 - 440, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Ghost.png'
            pos: self.width / 2 -330, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Shield.png'
            pos: self.width / 2 -220, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Mirror.png'
            pos: self.width / 2 -110, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/KH.png'
            pos: self.width / 2 , self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Pong.png'
            pos: self.width / 2 +110, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Gun.png'
            pos: self.width / 2 +220, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/Punch.png'
            pos: self.width / 2 +330, self.top / 22
            size:100,100
        Rectangle:
            source: './assets/KP.png'
            pos: self.width / 2 +440, self.top / 22
            size:100,100
            

    Label:
        text: root.stage  
        font_size: 30
        center: self.parent.center 
         
    #กรณีที่มีการอ้างอิงถึงอ็อบเจ็กต์ด้านนอกคลาสปัจจุบัน เช่น <Player> หรือ <Enemy> จะใช้ root เพื่ออ้างอิงถึง GameWidget แทน self 
    Player:
        id: player_left
        pos: root.width *2/7, root.top / 4

    Enemy:
        id: enemy_right
        pos: root.width * 2 / 3, root.top / 4
    
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top / 2
        text: str(root.player.energy)
   
    Label:
        font_size: 70
        center_x: root.width *3 /4
        top: root.top /2
        text: str(root.enemy.energy)
   
